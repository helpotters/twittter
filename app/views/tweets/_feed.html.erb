<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/64x64.png" alt="" />
            </p>
        </figure>
        <div class="media-content">
            <%= render 'tweets/form' %>
        </div>
    </article>

<% @tweets.each do |tweet| %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/64x64.png" alt="" />
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong>Paul Lemus</strong><br />
                    <small>@helpotters</small><br />
                    <p><%= tweet.tweet %></p>
                </div>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <%= link_to tweet, class: "level-item" do %>
                            <span class="icon"><i class="fa-link fa"  aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
                            <span class="icon i fa fa-pencil" aria-hidden="true"></span>
                        <% end %>
                        <%= link_to tweet, method: :delete, data: {confirm: "Are you sure?"} do %>
                            <span class="icon i fa fa-trash-o" aria-hidden="true"></span>
                        <% end %>
                    </div>
                </nav>
            </div>
        </article>
    </div>
<% end %>
</div>
